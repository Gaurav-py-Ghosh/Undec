<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/customBottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Your Profile"
                android:textColor="@color/background"
                android:textSize="24sp" />

            <!-- Streak Calendar Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Your Streak Calendar"
                android:textColor="@color/background"
                android:textSize="18sp" />

            <!-- Streak Calendar -->
            <com.example.undec.StreakCalendarView
                android:id="@+id/streakCalendarView"
                style="@style/StreakCalendarStyle"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Account Settings Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Account Settings"
                android:textColor="@color/background"
                android:textSize="18sp" />

            <!-- Add more profile elements as needed -->
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.example.undec.BottomNavView
        android:id="@+id/customBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"/>
</RelativeLayout>